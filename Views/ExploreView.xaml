<UserControl x:Class="Maze_Knight.Views.ExploreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Maze_Knight.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#FF0A1428"
             Padding="20">

    <Grid x:Name="MainGrid">
        <!-- Main Grid Column and Row Definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Map Grid Settings -->

        <Grid x:Name="MapGrid" HorizontalAlignment="Center" VerticalAlignment="Center" 
              Grid.Row="0" Grid.Column="0" Background="#FFECE4D5"/>

        
        <!-- Events Block -->
        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="Text"  Width="auto" Height="auto" Foreground="NavajoWhite" TextWrapping="Wrap">sadasd</TextBlock>

        <!-- Actions Block -->
        <!-- Actions Block Grid Definitions -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Actions Block Actions -->
            <Button Content="Drink Potion" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" 
                FontSize="20px" Width="150" Height="40" Grid.Column="0" Background="#FFECE4D5"/>
            <Button Content="Use Shield" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" 
                FontSize="20px" Width="150" Height="40" Grid.Column="1" Background="#FFECE4D5"/>
            <Button Content="Use Rune" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" 
                FontSize="20px" Width="150" Height="40" Grid.Column="2" Background="#FFECE4D5"/>
            <Button  Content="Flight!" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" 
                FontSize="20px" Width="150" Height="40" Grid.Column="3" Background="#FFECE4D5" Click="Flight"/>
        </Grid>

        <!-- Stats Block -->
        <TextBlock Grid.Row="1" Grid.Column="1" x:Name ="Stats" Width="auto" Height="auto" Foreground="NavajoWhite"  TextWrapping="Wrap">asdasd</TextBlock>
    </Grid>
</UserControl>
