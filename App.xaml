<Application x:Class="Maze_Knight.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Maze_Knight"
              xmlns:viewmodels="clr-namespace:Maze_Knight.ViewModels"
             xmlns:views="clr-namespace:Maze_Knight.Views"
             StartupUri="AppWindow.xaml">

    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:MainMenuViewModel}">
            <views:MainMenuView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:LoadGameViewModel}">
            <views:LoadGameView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:TownViewModel}">
            <views:TownView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:CreditsViewModel}">
            <views:CreditsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ExploreViewModel}">
            <views:ExploreView/>
        </DataTemplate>
    </Application.Resources>
</Application>
